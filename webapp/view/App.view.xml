<mvc:View
	controllerName="zzz.controller.App"
	xmlns="sap.m"
	xmlns:mvc="sap.ui.core.mvc"
	displayBlock="true">
	<Shell>
		<App class="myAppDemoWT">
			<pages>
				<Page title="{i18n>homePageTitle}">
					<headerContent>
						<Button
							icon="sap-icon://hello-world"
							press=".onOpenDialog"/>
					</headerContent>
					<content>
						<mvc:XMLView viewName="zzz.view.HelloPanel"/>
						<mvc:XMLView viewName="zzz.view.InvoiceList"/>
						<mvc:XMLView viewName="zzz.view.PeopleList"/>
					</content>
				</Page>
				
			</pages>
		</App>
	</Shell>
</mvc:View>